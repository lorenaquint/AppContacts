<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppContacts.View.ContactsPage"
              xmlns:local="clr-namespace:AppContacts.Behaviors">
    <ContentPage.ToolbarItems>
        <ToolbarItem
            Text="Agregar"
            Order="Primary"
            Command="{Binding AddContactCommand}"></ToolbarItem>
    </ContentPage.ToolbarItems>
    <ListView
        ItemsSource="{Binding ContactsList}"
        IsGroupingEnabled="True"
        GroupShortNameBinding="{Binding Key}"
        SelectedItem="{Binding CurrentContact}"
        local:ItemTappedAttached.Command="{Binding ItemTappedCommand}"
        >
        <ListView.GroupHeaderTemplate>
            <DataTemplate>
                <ViewCell
                    Height="30">
                    <StackLayout
                        VerticalOptions="FillAndExpand"
                        Padding="5"
                        BackgroundColor="Blue">
                        <Label
                            Text="{Binding Key}"
                            TextColor="White"
                            VerticalOptions="Center"
                            HeightRequest="25"></Label>
                    </StackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.GroupHeaderTemplate>
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Label
                            Text="{Binding Name}"/>
                        <Label
                            Grid.Column="1"
                            Text="{Binding Phone}"></Label>
                    </Grid>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>